#card-id-1.card--element-node.card(data-micro-interaction="card")
    .card-divider
        .grid-x
            .car-title.cell.small-10
                .icon
                    i.material-icons.md-18 change_history
                .text
                    | Element Name Here
            .card-options.small-2
                button.button-option-setting.-is-expanded(data-micro-interaction="button")
                    span.icon
                        i.material-icons.md-18 settings
                button.button-option-drag(data-micro-interaction="card")
                    span.icon
                        i.material-icons.md-18 drag_handle
    .card-section

        .grid-x
            .medium-2.cell
                .form--input-text
                    .switch.tiny
                            label.switch-value(for='switchA-1')
                                | Show
                            input#switchA-1.switch-input(type='checkbox', name='switchA-1')
                            label.switch-paddle(for='switchA-1')
                                span.show-for-sr Edit Mode
                                span.switch-active(aria-hidden='true')
                                    i.material-icons.md-14(aria-hidden='true') visibility
                                span.switch-inactive(aria-hidden='true')
                                    i.material-icons.md-14(aria-hidden='true') visibility_off
            .medium-2.cell
                .form--input-text
                    .switch.tiny
                            label.switch-value(for='switchA-2')
                                | Show
                            input#switchA-2.switch-input(type='checkbox', name='switchA-2')
                            label.switch-paddle(for='switchA-2')
                                span.show-for-sr Edit Mode
                                span.switch-active(aria-hidden='true')
                                    i.material-icons.md-14(aria-hidden='true') visibility
                                span.switch-inactive(aria-hidden='true')
                                    i.material-icons.md-14(aria-hidden='true') visibility_off

            .medium-3.cell
                .form--input-select
                    label
                        | Options
                    select(required='')
                        option(value='volvo') One
                        option(value='saab') Two
                        option(value='mercedes') Three
